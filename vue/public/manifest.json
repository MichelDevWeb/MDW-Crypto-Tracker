{
  "manifest_version": 3,
  "name": "MDW Crypto Portfolio Tracker",
  "version": "1.0",
  "description": "Track cryptocurrency prices and manage your portfolio",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://api.coincap.io/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
